{
    "name": "triage-wheel-of-misfortune",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.9.10",
        "@material-ui/icons": "^4.9.1",
        "device-detector-js": "^2.2.1",
        "node-sass": "^4.13.1",
        "npm-run-all": "^4.1.5",
        "react": "^16.13.1",
        "react-app-polyfill": "^1.0.6",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "react-scripts": "3.4.1",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "typescript": "~3.7.2"
    },
    "scripts": {
        "build:css": "node-sass src/styles/sass -o src/styles/css",
        "watch:css": "npm run build:css && node-sass src/styles/sass -o src/styles/css --watch --recursive",
        "start:js": "react-scripts start",
        "start": "npm-run-all -p watch:css start:js",
        "build": "npm run build:css && react-scripts build",
        "lint-ts": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
        "lint-js": "eslint 'src/**/*.{js,jsx}'",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint -p tsconfig.json -t msbuild --fix",
            "prettier --write",
            "git add"
        ],
        "*.{css,less,scss,json,yml,yaml}": [
            "prettier --write",
            "git add"
        ],
        "*.{js,jsx}": [
            "eslint",
            "prettier --write",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/firebase": "^3.2.1",
        "@types/jest": "^24.0.0",
        "@types/material-ui": "^0.21.7",
        "@types/node": "^12.0.0",
        "@types/node-sass": "^4.11.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/react-redux": "^7.1.7",
        "@types/redux": "^3.6.0",
        "@types/redux-thunk": "^2.1.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "firebase": "^7.14.2",
        "husky": "^4.2.5",
        "lint-staged": "^10.1.7",
        "prettier": "^2.0.5",
        "tslint": "^6.1.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^9.0.0",
        "tslint-plugin-prettier": "^2.3.0",
        "tslint-react": "^5.0.0"
    }
}
